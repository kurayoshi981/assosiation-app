<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="main-up">
                <h2>問題<h2>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <div class="card-icon">
                    </div>
                    <div class="card-content">
                        <p class="card-text"><%= @post.content %></p>
                        <hr>
                        <p class="card-text">ヒント１：<%= @post.hint01 %>, ヒント2：<%= @post.hint02 %>, ヒント3：<%= @post.hint03 %></p>
                        <hr>
                    </div>
                  
                        <%= link_to "編集する", edit_post_path, class: "btn btn-primary" %>
                        <%= link_to "削除する", @post, class: "btn btn-danger", method: :delete, data: { confirm: "削除しますか？"} %>
                    </div>
                </div>
            </div>
            <% if current_user %>
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="card-content">
                            <%= render partial: 'comments/form', locals: { post: @post, comment: @comment } %>
                        </div>
                    </div>
                </div>
            <% end %>
    </div>
</div>