<div class="container">
    <div class="row">
        <div class="card" style="width: 18rem;">
            <% @post.each do |post| %>
            <% if post.image.present? %>
                <%= image_tag post.image_url  %>
            <% end %>
            <div class="card-body">
                <h5 class="card-title"><%= post.answer %></h5>
                <p class="card-text"><%= post.content %></p>
            </div>
            <div class="card-footer">
            <small class="text-muted"><%= post.hint01 %></small>
            </div>
            <% end %>
        </div>
    </div>
</div>