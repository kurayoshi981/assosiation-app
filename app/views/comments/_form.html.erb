<%= form_with(model: [post, comment])  do |f| %>
    <% if current_user %>
        <div class="form-group">
            <%= f.label :ヒント %>
            <%= f.text_field :guestsHint, autofocus: true , class: "form-control", placeholder: "ヒントを追加する" %>
        </div>
        <div class="text-center">
            <%= f.submit "ヒントを追加", class: "btn btn-primary" %>
        </div>
    <% else %>
        <div class="text-center">
        <p>ヒントを追加するには新規登録へ</p>
        <%= link_to '新規登録', new_user_registration_path, class: "btn btn-primary" %>
        </div>
    <% end %>
<% end %>
