<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4">
            <div class="side-up">
                <h2>マイページ</h2>
            </div>
            <div class="side-main">
                <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= @name %>さんの投稿一覧</h5>
                        </div>
                    </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="main-up">
                <h2>問題一覧<h2>
            </div>
            <% @post.each do |post| %>
                <%= link_to post_path(post), class:"card_link" do %>
                <div class="card" >
                    <div class="card-body">
                        <div class="card-icon">
                        </div>
                        <div class="card-content">
                            <p class="card-text"><%= post.content %></p>
                            <hr>
                            <p class="card-text">ヒント１：<%= post.hint01 %></p>
                            <%= link_to "削除する", post, class: "btn btn-danger", method: :delete, data: { confirm: "削除しますか？"} %>
                        </div>
                    </div>
                </div>
                <% end %>
            <% end %>
        </div>
    </div>
</div>